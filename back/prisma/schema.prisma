  id        String   @id @default(cuid())
  storeName String
  phone     String
  email     String
  address   String
  city      String
  state     String
  zipCode   String
  country   String   @default("CA")
  taxId     String?
  currency  String   @default("CAD")
  timezone  String   @default("America/Vancouver")
  logoUrl   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt


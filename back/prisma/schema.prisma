  cities    String[] // Array of city names
  provinces String[] // Array of province codes
  fee       Float
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("delivery_region_zones")
}

